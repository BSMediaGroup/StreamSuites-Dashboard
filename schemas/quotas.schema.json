{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bsmediagroup.github.io/StreamSuites-Dashboard/schemas/quotas.schema.json",

  "title": "StreamSuites API Quota Snapshot",
  "description": "Runtime-authoritative snapshot of platform API quota usage exported by StreamSuites and consumed read-only by the dashboard.",

  "type": "object",
  "required": [
    "schema_version",
    "generated_at",
    "platforms"
  ],

  "properties": {
    "schema_version": {
      "type": "string",
      "enum": ["v1"],
      "description": "Quota snapshot schema version."
    },

    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "UTC timestamp when the snapshot was generated by the runtime."
    },

    "platforms": {
      "type": "object",
      "description": "Quota data keyed by platform name.",
      "additionalProperties": {
        "$ref": "#/$defs/platformQuotas"
      }
    }
  },

  "$defs": {
    "platformQuotas": {
      "type": "object",
      "description": "Quota windows for a single platform.",
      "additionalProperties": {
        "$ref": "#/$defs/quotaWindow"
      }
    },

    "quotaWindow": {
      "type": "object",
      "required": [
        "scope",
        "used",
        "max",
        "remaining",
        "reset_at",
        "status"
      ],

      "properties": {
        "scope": {
          "type": "string",
          "enum": ["global"],
          "description": "Quota scope. v1 supports global scope only."
        },

        "used": {
          "type": "integer",
          "minimum": 0,
          "description": "Units consumed within the current window."
        },

        "max": {
          "type": "integer",
          "minimum": 0,
          "description": "Maximum allowed units for the window."
        },

        "remaining": {
          "type": "integer",
          "minimum": 0,
          "description": "Remaining units before exhaustion."
        },

        "reset_at": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "UTC timestamp when the quota window resets, or null if not applicable."
        },

        "status": {
          "type": "string",
          "enum": [
            "ok",
            "buffer",
            "exhausted"
          ],
          "description": "Runtime-evaluated quota health status."
        }
      },

      "additionalProperties": false
    }
  },

  "additionalProperties": false
}
