{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bsmediagroup.github.io/StreamSuites-Dashboard/schemas/quotas.schema.json",

  "title": "StreamSuites API Quota Snapshot",
  "description": "Read-only snapshot of platform API quota usage exported by the StreamSuites runtime and consumed by the dashboard.",

  "type": "object",
  "required": [
    "schema_version",
    "generated_at",
    "platforms"
  ],

  "properties": {
    "schema_version": {
      "type": "string",
      "description": "Quota snapshot schema version.",
      "enum": ["v1"]
    },

    "generated_at": {
      "type": ["string", "null"],
      "description": "UTC timestamp when the snapshot was generated by the runtime.",
      "format": "date-time"
    },

    "platforms": {
      "type": "array",
      "description": "List of quota records per platform, scope, and window.",
      "items": {
        "$ref": "#/$defs/quotaRecord"
      }
    }
  },

  "$defs": {
    "quotaRecord": {
      "type": "object",
      "required": [
        "platform",
        "scope",
        "window",
        "used",
        "max",
        "remaining",
        "reset_at",
        "status"
      ],

      "properties": {
        "platform": {
          "type": "string",
          "description": "Platform identifier.",
          "enum": [
            "youtube",
            "twitch",
            "rumble",
            "twitter",
            "discord"
          ]
        },

        "scope": {
          "type": "string",
          "description": "Quota scope.",
          "enum": [
            "global",
            "creator",
            "channel"
          ]
        },

        "window": {
          "type": "string",
          "description": "Quota window type.",
          "enum": [
            "daily",
            "hourly",
            "per_minute",
            "per_second"
          ]
        },

        "used": {
          "type": "integer",
          "description": "Units consumed within the current window.",
          "minimum": 0
        },

        "max": {
          "type": "integer",
          "description": "Maximum allowed units for the window.",
          "minimum": 0
        },

        "remaining": {
          "type": "integer",
          "description": "Remaining units before exhaustion.",
          "minimum": 0
        },

        "reset_at": {
          "type": ["string", "null"],
          "description": "UTC timestamp when the quota window resets, or null if not applicable.",
          "format": "date-time"
        },

        "status": {
          "type": "string",
          "description": "Quota health classification for UI signaling.",
          "enum": [
            "ok",
            "buffer",
            "warn",
            "exhausted",
            "unknown"
          ]
        }
      },

      "additionalProperties": false
    }
  },

  "additionalProperties": false
}
