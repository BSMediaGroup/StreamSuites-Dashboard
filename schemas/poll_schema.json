{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StreamSuites Poll Definition",
  "description": "Defines a poll configuration sent from the dashboard to the bot. Derived from CONTRACTS.md v1.2.",
  "type": "object",
  "required": [
    "poll_id",
    "creator_id",
    "title",
    "description",
    "options",
    "vote_trigger",
    "active"
  ],
  "additionalProperties": true,

  "properties": {
    "poll_id": {
      "type": "string",
      "minLength": 1,
      "description": "Runtime-generated poll identifier"
    },

    "creator_id": {
      "type": "string",
      "description": "Authoritative creator identifier",
      "pattern": "^[A-Za-z0-9]{6}$",
      "minLength": 6,
      "maxLength": 6
    },

    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Poll title"
    },

    "description": {
      "type": "string",
      "minLength": 1,
      "description": "Instructions shown to users"
    },

    "vote_trigger": {
      "type": "string",
      "minLength": 1,
      "description": "Chat command used to cast votes"
    },

    "active": {
      "type": "boolean",
      "description": "Whether the poll is currently active"
    },

    "options": {
      "type": "array",
      "minItems": 2,
      "description": "List of poll options",
      "items": {
        "$ref": "#/definitions/poll_option"
      }
    }
  },

  "definitions": {
    "poll_option": {
      "type": "object",
      "required": ["id", "label"],
      "additionalProperties": true,

      "properties": {
        "id": {
          "type": "integer",
          "minimum": 1,
          "description": "Numeric option identifier used for voting"
        },

        "label": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable option label"
        }
      }
    }
  }
}
