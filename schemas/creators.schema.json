{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StreamSuites Creators Configuration",
  "description": "Defines creator identities and platform enablement for StreamSuites. Derived from CONTRACTS.md v1.2.",
  "type": "object",
  "required": ["creators"],
  "additionalProperties": false,

  "properties": {
    "creators": {
      "type": "array",
      "description": "List of creator configuration objects",
      "items": {
        "$ref": "#/definitions/creator"
      }
    }
  },

  "definitions": {
    "creator": {
      "type": "object",
      "required": [
        "creator_id",
        "display_name",
        "enabled",
        "platforms"
      ],
      "additionalProperties": true,

      "properties": {
        "creator_id": {
          "type": "string",
          "description": "Primary creator identifier (authoritative, immutable)",
          "pattern": "^[A-Za-z0-9]{6}$",
          "minLength": 6,
          "maxLength": 6
        },

        "display_name": {
          "type": "string",
          "description": "Human-readable name for dashboards and logs",
          "minLength": 1
        },

        "enabled": {
          "type": "boolean",
          "description": "Master enable/disable switch for the creator"
        },

        "platforms": {
          "type": "object",
          "description": "Platform enablement flags",
          "additionalProperties": true,

          "properties": {
            "rumble": {
              "type": "boolean",
              "description": "Enable Rumble integration"
            },
            "youtube": {
              "type": "boolean",
              "description": "Enable YouTube integration"
            },
            "twitch": {
              "type": "boolean",
              "description": "Enable Twitch integration"
            },
            "twitter": {
              "type": "boolean",
              "description": "Enable Twitter integration"
            },
            "discord": {
              "type": "boolean",
              "description": "Enable Discord integration"
            },
            "pilled": {
              "type": "boolean",
              "description": "Enable Pilled integration"
            }
          }
        }
      }
    }
  }
}
